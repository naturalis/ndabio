function _setDetailPagePreviousLink ($service, $search, $previousId) {
	if (isset($previousId)) {
		safe_parse_str($search, $p);
		// Strip size if it was provided; we don't need it
		if (isset($p['size'])) {
			unset($p['size']);
		}
		// Only proceed if size has been set; otherwise url has been tampered with
		// We have already validated that $p['from'] is an integer
		if (isset($p['from'])) {
			$p['from'] = $p['from'] == 0 ? $p['from'] : $p['from'] - 1;
			return setBasePath() . $service . '/' . $previousId . '/' . http_build_query($p);
		}
	}
	return null;
}

function _setDetailPageNextLink ($service, $search, $nextId, $previousId) {
	if (isset($nextId)) {
		safe_parse_str($search, $p);
		// Strip size if it was provided; we don't need it
		if (isset($p['size'])) {
			unset($p['size']);
		}
		// Only proceed if size has been set; otherwise url has been tampered with
		// We have already validated that $p['from'] is an integer
		if (isset($p['from'])) {
			$p['from'] = !isset($previousId) ? $p['from'] : $p['from'] + 1;
			return setBasePath() . $service . '/' . $nextId . '/' . http_build_query($p);
		}
	}
	return null;
}

function _setDetailPageBackLink ($service, $search, $from) {
	// Need to reset search to correct from value
	safe_parse_str($search, $p);
	$p['from'] = floor(($p['from'] + 1) * 0.01) * 100;
	return setBasePath() . 'result/' . $service . '/' . http_build_query($p);
}

function _setDetailPageNavigation ($service, $search, $set, $id, $from) {
	$previousId = $nextId = null;
	$output = new stdClass();
	foreach ($set->resultSet as $i => $row) {
		if (isset($row->item->unitID) && $row->item->unitID == $id) {
			$output = $row->item;
			break;
		}
	}
	$output->offset = $from + 2;
	if (isset($set->resultSet[($i - 1)]->item->unitID)) {
		$previousId = $set->resultSet[($i - 1)]->item->unitID;
	} else {
		$output->offset = 1;
	}
	if (isset($set->resultSet[($i + 1)]->item->unitID)) {
		$nextId = $set->resultSet[($i + 1)]->item->unitID;
	}
	$output->previousUrl = _setDetailPagePreviousLink($service, $search, $previousId);
	$output->nextUrl = _setDetailPageNextLink($service, $search, $nextId, $previousId);
	$output->backUrl =  _setDetailPageBackLink($service, $search, $from);
	
	
	
	$output->totalSize = $set->totalSize;
	return $output;
}

