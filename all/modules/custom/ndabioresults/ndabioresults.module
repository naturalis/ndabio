function _getSearchPaths ($service) {
	$data = _nbaFieldMapping()[_normaliseServiceName($service)];
	foreach ($data as $term => $paths) {
		foreach ($paths as $i => $path) {
			$result[$path] = $term . $i;
		}
	}
	//return $data;
	return isset($result) ? array_values(array_flip($result)) : false;
}


