function ndabio_search_conditions_callback($keys) {
  //drupal_set_message("ndabio_search_conditions_callback (" . $keys . ")");
  $conditions = array();
  //dpm($_REQUEST);
  if (!empty($_REQUEST['keys'])) {
    $conditions['keys'] = $_REQUEST['keys'];
  }
